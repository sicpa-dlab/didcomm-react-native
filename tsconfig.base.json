{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": false,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/**",
    "node_modules/@types/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "build",
    "__tests__",
    "**/build"
  ]
}
